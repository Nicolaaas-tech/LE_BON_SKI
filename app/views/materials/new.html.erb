<%= simple_form_for(@material) do |f| %>

  <%= f.input :category, :collection => ['ski', 'snowboard', 'luge', 'racket', 'mono-ski'] %>

  <%= f.input :size, :collection => ['small', 'medium', 'large'] %>

  <%= f.input :price %>

  <%= f.input :description %>

  <%= f.input :localisation %>

  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>

<%= link_to 'Lets go back to the home page', materials_path %>
